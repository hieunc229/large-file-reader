{
  "name": "cafely",
  "version": "0.0.1",
  "description": "Self-hosted subscription and license management platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon -r tsconfig-paths/register src/dev.ts",
    "clean": "rm -rf dist build __rumbo bundle",
    "build-only": "yarn bundle-clientssr && tsc && yarn copy-assets && yarn bundle-client && yarn bundle-server",
    "build": "yarn build-only",
    "prebuild": "yarn clean",
    "postbuild": "cp -r dist/ bundle/public/ && cp -r main/ bundle/",
    "copy-assets": "copyfiles src/**/*.css build/",
    "bundle-clientssr": "NODE_PATH=src/ ts-node scripts/bundle-clientssr.ts",
    "bundle-client": "NODE_PATH=src/ ts-node scripts/bundle-client.ts",
    "bundle-server": "NODE_PATH=src/ ts-node scripts/bundle-server.ts",
    "start": "node bundle/server/index.js",
    "s": "./scripts.sh",
    "check-circular": "npx madge --circular --extensions ts ."
  },
  "author": "Hieu Nguyen",
  "license": "AGPL-3.0",
